@model DoableFinal.ViewModels.TicketDetailsViewModel

@{
    ViewData["Title"] = "Ticket Details";
    Layout = "_ClientLayout";
    var dateTimeFormat = "MMM dd, yyyy HH:mm";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Ticket Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Tickets">Tickets</a></li>
        <li class="breadcrumb-item active">Ticket #@Model.Ticket.Id.ToString("D5")</li>
    </ol>

    @if (TempData["TicketMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["TicketMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Ticket Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-ticket-alt me-1"></i>
                    Ticket Information
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Ticket.Title</h5>
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <p><strong>Status:</strong> 
                                <span class="badge bg-@(Model.Ticket.Status switch {
                                    "Open" => "primary",
                                    "In Progress" => "info",
                                    "Resolved" => "success",
                                    "Closed" => "secondary",
                                    _ => "secondary"
                                })">@Model.Ticket.Status</span>
                            </p>
                            <p><strong>Priority:</strong> 
                                <span class="badge bg-@(Model.Ticket.Priority switch {
                                    "Low" => "success",
                                    "Medium" => "warning",
                                    "High" => "danger",
                                    "Urgent" => "dark",
                                    _ => "secondary"
                                })">@Model.Ticket.Priority</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Created:</strong> @Model.Ticket.CreatedAt.ToString(dateTimeFormat)</p>
                            @if (Model.Ticket.UpdatedAt.HasValue)
                            {
                                <p><strong>Last Updated:</strong> @Model.Ticket.UpdatedAt.Value.ToString(dateTimeFormat)</p>
                            }
                        </div>
                    </div>
                    <div class="mt-4">
                        <h6 class="fw-bold">Description:</h6>
                        <p class="card-text">@Model.Ticket.Description</p>
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-comments me-1"></i>
                    Comments
                </div>
                <div class="card-body">
                    <form asp-action="AddTicketComment" method="post" class="mb-4">
                        <input type="hidden" name="ticketId" value="@Model.Ticket.Id" />
                        <div class="mb-3">
                            <label for="comment" class="form-label">Add a comment</label>
                            <textarea name="comment" id="comment" class="form-control" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane"></i> Post Comment
                        </button>
                    </form>

                    <div class="comments-section">
                        @if (Model.Comments != null && Model.Comments.Any())
                        {
                            foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                            {
                                <div class="comment mb-3">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <div class="avatar-circle">
                                                <span class="initials">@(comment.CreatedBy?.FirstName.FirstOrDefault() ?? 'U')</span>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <div class="d-flex align-items-center">
                                                <h6 class="mb-0">@($"{comment.CreatedBy?.FirstName} {comment.CreatedBy?.LastName}")</h6>
                                                <small class="text-muted ms-2">@comment.CreatedAt.ToString(dateTimeFormat)</small>
                                            </div>
                                            <p class="mb-1">@comment.CommentText</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No comments yet.</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Assigned To -->
            @if (Model.Ticket.AssignedTo != null)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-user me-1"></i>
                        Assigned Support Staff
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="avatar-circle">
                                <span class="initials">@Model.Ticket.AssignedTo.FirstName.FirstOrDefault()</span>
                            </div>
                            <div class="ms-3">
                                <h6 class="mb-0">@($"{Model.Ticket.AssignedTo.FirstName} {Model.Ticket.AssignedTo.LastName}")</h6>
                                <small class="text-muted">Support Staff</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Timeline -->
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-history me-1"></i>
                    Ticket Timeline
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <i class="fas fa-circle text-primary"></i>
                            <p class="mb-0">Ticket Created</p>
                            <small class="text-muted">@Model.Ticket.CreatedAt.ToString(dateTimeFormat)</small>
                        </div>
                        @if (Model.Ticket.Status != "Open")
                        {
                            <div class="timeline-item">
                                <i class="fas fa-circle text-info"></i>
                                <p class="mb-0">Status Updated to @Model.Ticket.Status</p>
                                <small class="text-muted">@(Model.Ticket.UpdatedAt?.ToString(dateTimeFormat) ?? "-")</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        background-color: #0d6efd;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .initials {
        color: white;
        font-size: 14px;
        font-weight: bold;
    }

    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 1.5rem;
        border-left: 2px solid #dee2e6;
        padding-left: 20px;
    }

    .timeline-item:last-child {
        padding-bottom: 0;
    }

    .timeline-item i {
        position: absolute;
        left: -7px;
        font-size: 12px;
        background: white;
    }
</style>