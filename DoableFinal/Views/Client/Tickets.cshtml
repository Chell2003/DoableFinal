@model IEnumerable<DoableFinal.Models.Ticket>

@{
    ViewData["Title"] = "My Tickets";
    Layout = "_ClientLayout";
    var dateTimeFormat = "MMM dd, yyyy HH:mm";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mt-4">My Tickets</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Tickets</li>
            </ol>
        </div>
        <div>
            <a asp-action="CreateTicket" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Ticket
            </a>
        </div>
    </div>

    @if (TempData["TicketMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["TicketMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-ticket-alt me-1"></i>
            My Support Tickets
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Created At</th>
                            <th>Last Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model)
                        {
                            <tr>
                                <td>#@ticket.Id.ToString("D5")</td>
                                <td>@ticket.Title</td>
                                <td>
                                    <span class="badge bg-@(ticket.Status switch {
                                        "Open" => "primary",
                                        "In Progress" => "info",
                                        "Resolved" => "success",
                                        "Closed" => "secondary",
                                        _ => "secondary"
                                    })">@ticket.Status</span>
                                </td>
                                <td>
                                    <span class="badge bg-@(ticket.Priority switch {
                                        "Low" => "success",
                                        "Medium" => "warning",
                                        "High" => "danger",
                                        "Urgent" => "dark",
                                        _ => "secondary"
                                    })">@ticket.Priority</span>
                                </td>
                                <td>@ticket.CreatedAt.ToString(dateTimeFormat)</td>
                                <td>@(ticket.UpdatedAt?.ToString(dateTimeFormat) ?? "-")</td>
                                <td>
                                    <a asp-action="TicketDetails" asp-route-id="@ticket.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>