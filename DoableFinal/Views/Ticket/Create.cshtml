@model DoableFinal.ViewModels.CreateTicketViewModel

@{
    ViewData["Title"] = "Create Ticket";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Create New Ticket</h2>
        </div>
    </div>

    @if (TempData["Debug"] != null)
    {
        <div class="alert alert-info">
            <pre>@TempData["Debug"]</pre>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <pre>@TempData["Error"]</pre>
        </div>
    }

    <div class="alert alert-info">
        <strong>Debug Info:</strong><br/>
        Is User Authenticated: @User.Identity?.IsAuthenticated<br/>
        User Name: @User.Identity?.Name<br/>
        Is Client Role: @User.IsInRole("Client")<br/>
        Current Time: @DateTime.Now
    </div>

    <div class="card">
        <div class="card-body">
            @if (TempData["ValidationError"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ValidationError"]
                </div>
            }
            <form asp-action="Create" asp-controller="Ticket" method="post" id="ticketForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Type</label>
                            <select asp-for="Type" asp-items="Model.TicketTypes" class="form-select">
                                <option value="">Select Type</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Priority" class="form-label">Priority</label>
                            <select asp-for="Priority" asp-items="Model.PriorityLevels" class="form-select">
                                <option value="">Select Priority</option>
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ProjectId" class="form-label">Project</label>
                            <select asp-for="ProjectId" asp-items="Model.Projects" class="form-select">
                                <option value="">Select Project</option>
                            </select>
                            <span asp-validation-for="ProjectId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="AssignedToId" class="form-label">Assign To</label>
                            <select asp-for="AssignedToId" asp-items="Model.Assignees" class="form-select">
                                <option value="">Select Assignee</option>
                            </select>
                            <span asp-validation-for="AssignedToId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary" id="submitTicket" onclick="console.log('Submit button clicked')">Create Ticket</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            console.log('Document ready');
            
            $('#ticketForm').on('submit', function (e) {
                console.log('Form submit triggered');
                
                var formData = {
                    Title: $('#Title').val(),
                    Description: $('#Description').val(),
                    Priority: $('#Priority').val(),
                    Type: $('#Type').val(),
                    ProjectId: $('#ProjectId').val(),
                    AssignedToId: $('#AssignedToId').val()
                };
                
                console.log('Form data:', formData);
                
                // Check if form is valid
                if (!$(this).valid()) {
                    console.log('Form validation failed');
                    e.preventDefault();
                    return false;
                }
                
                console.log('Form validation passed, proceeding with submission');
            });

            // Add click handler to submit button
            $('#submitTicket').on('click', function(e) {
                console.log('Submit button clicked');
            });

            // Monitor validation errors
            $('#ticketForm').on('invalid-form', function(e, validator) {
                console.log('Validation errors:', validator.errorList);
            });
        });
    </script>
}