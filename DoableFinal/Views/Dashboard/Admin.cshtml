@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">Admin Dashboard</h1>
            <p class="text-muted">System Overview and Management</p>
        </div>
    </div>

    <div class="row">
        <!-- System Statistics -->
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-folder"></i>
                </div>
                <div class="stat-value">@ViewBag.TotalProjects</div>
                <div class="stat-label">Total Projects</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-list-task"></i>
                </div>
                <div class="stat-value">@ViewBag.TotalTasks</div>
                <div class="stat-label">Total Tasks</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-value">@ViewBag.TotalUsers</div>
                <div class="stat-label">Total Users</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-clock"></i>
                </div>
                <div class="stat-value">@ViewBag.OverdueTasks</div>
                <div class="stat-label">Overdue Tasks</div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- User Management -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">User Management</h5>
                    <a asp-controller="Users" asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-lg"></i> Add User
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in ViewBag.RecentUsers ?? new List<ApplicationUser>())
                                {
                                    <tr>
                                        <td>@user.FirstName @user.LastName</td>
                                        <td>@user.Email</td>
                                        <td>@user.Role</td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Users", new { id = user.Id })" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Projects -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Recent Projects</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var project in ViewBag.RecentProjects ?? new List<Project>())
                        {
                            <a href="@Url.Action("Details", "Projects", new { id = project.Id })" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@project.Name</h6>
                                    <small class="text-muted">@project.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                                <p class="mb-1">@project.Description</p>
                                <small class="text-muted">Status: @project.Status</small>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Recent Tasks -->
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Recent Tasks</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var task in ViewBag.RecentTasks ?? new List<ProjectTask>())
                        {
                            <a href="@Url.Action("Details", "Tasks", new { id = task.Id })" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@task.Title</h6>
                                    <small class="text-muted">Due: @task.DueDate.ToString("MMM dd, yyyy")</small>
                                </div>
                                <p class="mb-1">@task.Description</p>
                                <small class="text-muted">
                                    Priority: @task.Priority | Status: @task.Status
                                </small>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 