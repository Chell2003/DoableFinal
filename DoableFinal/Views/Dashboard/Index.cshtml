@using Microsoft.AspNetCore.Identity
@inject UserManager<DoableFinal.Models.ApplicationUser> UserManager
@{
    ViewData["Title"] = "Dashboard";
    var currentUser = await UserManager.GetUserAsync(User);
    var userRole = User.IsInRole("Admin") ? "Admin" : 
                  User.IsInRole("Project Manager") ? "Project Manager" : "Client";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3">Dashboard</h1>
            <p class="text-muted">Welcome back, @currentUser.FirstName @currentUser.LastName!</p>
        </div>
        <div class="d-flex align-items-center">
            <span class="badge bg-primary me-2">@userRole</span>
            <img src="/images/default-avatar.png" 
                 alt="Profile Picture" 
                 class="rounded-circle"
                 style="width: 40px; height: 40px; object-fit: cover;" />
        </div>
    </div>

    <div class="row">
        <!-- Statistics Cards -->
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-folder"></i>
                </div>
                <div class="stat-value">@ViewBag.TotalProjects</div>
                <div class="stat-label">Total Projects</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-list-task"></i>
                </div>
                <div class="stat-value">@ViewBag.TotalTasks</div>
                <div class="stat-label">Total Tasks</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-value">@ViewBag.TotalUsers</div>
                <div class="stat-label">Total Users</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-clock"></i>
                </div>
                <div class="stat-value">@ViewBag.OverdueTasks</div>
                <div class="stat-label">Overdue Tasks</div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Recent Projects -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Recent Projects</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var project in ViewBag.RecentProjects ?? new List<Project>())
                        {
                            <a href="@Url.Action("Details", "Projects", new { id = project.Id })" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@project.Name</h6>
                                    <small class="text-muted">@project.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                                <p class="mb-1">@project.Description</p>
                                <small class="text-muted">Status: @project.Status</small>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Tasks -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Recent Tasks</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var task in ViewBag.RecentTasks ?? new List<ProjectTask>())
                        {
                            <a href="@Url.Action("Details", "Tasks", new { id = task.Id })" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@task.Title</h6>
                                    <small class="text-muted">Due: @task.DueDate.ToString("MMM dd, yyyy")</small>
                                </div>
                                <p class="mb-1">@task.Description</p>
                                <small class="text-muted">
                                    Priority: @task.Priority | Status: @task.Status
                                </small>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="row mt-4">
            <!-- User Management -->
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-white">
                        <h5 class="card-title mb-0">User Management</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in ViewBag.RecentUsers ?? new List<ApplicationUser>())
                                    {
                                        <tr>
                                            <td>@user.FirstName @user.LastName</td>
                                            <td>@user.Email</td>
                                            <td>@user.Role</td>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Edit", "Users", new { id = user.Id })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div> 