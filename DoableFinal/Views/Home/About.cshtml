@{
    ViewData["Title"] = "About Us";
}

<!-- About Hero Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">About Us</h1>
                <p class="lead">We're dedicated to revolutionizing project management through innovative solutions and exceptional service.</p>
            </div>
            <div class="col-lg-6">
                <img src="~/images/about-hero.svg" alt="About Us" class="img-fluid">
            </div>
        </div>
    </div>
</section>

<!-- Our Story Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2 class="text-center mb-4">Our Story</h2>
                <p class="lead text-center mb-5">Founded in 2024, we've been at the forefront of project management innovation.</p>
                <p>Our journey began with a simple idea: to make project management accessible, intuitive, and efficient for teams of all sizes. Today, we're proud to serve thousands of organizations worldwide, helping them achieve their goals through better project management.</p>
            </div>
        </div>
    </div>
</section>

<!-- Our Mission Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-4">Our Mission</h2>
                <p class="lead">To empower teams with the tools they need to deliver exceptional results.</p>
                <p>We believe that great project management is the foundation of successful organizations. Our mission is to provide innovative solutions that help teams work smarter, collaborate better, and achieve more.</p>
            </div>
        </div>
    </div>
</section>

<!-- Our Values Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Values</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-lightbulb display-4 text-primary mb-3"></i>
                        <h3 class="h5">Innovation</h3>
                        <p>We constantly push boundaries to deliver cutting-edge solutions.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-people display-4 text-primary mb-3"></i>
                        <h3 class="h5">Collaboration</h3>
                        <p>We believe in the power of working together to achieve great things.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-shield-check display-4 text-primary mb-3"></i>
                        <h3 class="h5">Integrity</h3>
                        <p>We maintain the highest standards of honesty and transparency.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

