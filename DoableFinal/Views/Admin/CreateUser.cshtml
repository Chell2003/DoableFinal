@model DoableFinal.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = $"Create {ViewBag.Role}";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Create Account</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-person-plus me-1"></i>
            New User Registration
        </div>
        <div class="card-body">
            <form asp-action="CreateUser" method="post" autocomplete="off" spellcheck="false">
                <!-- Hidden fields to prevent autofill -->
                <input type="text" name="username" style="display:none" />
                <input type="password" name="password" style="display:none" />
                <input type="text" name="hidden" style="display:none" autocomplete="false" />
                <input type="password" name="hidden" style="display:none" autocomplete="false" />
                <div class="mb-3">
                    <label asp-for="Role" class="form-label">Role</label>
                    <select asp-for="Role" class="form-select">
                        <option value="">Select Role</option>
                        <option value="Admin">Admin</option>
                        <option value="Client">Client</option>
                        <option value="Employee">Employee</option>
                        <option value="Project Manager">Project Manager</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" name="fname_@(Guid.NewGuid())" autocomplete="new-password" autocorrect="off" autocapitalize="off" readonly onfocus="this.removeAttribute('readonly');" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" name="lname_@(Guid.NewGuid())" autocomplete="new-password" autocorrect="off" autocapitalize="off" readonly onfocus="this.removeAttribute('readonly');" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" name="email_@(Guid.NewGuid())" autocomplete="new-password" autocorrect="off" autocapitalize="off" readonly onfocus="this.removeAttribute('readonly');" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="position-relative">
                            <input type="password" asp-for="Password" class="form-control" name="pwd_@(DateTime.Now.Ticks)" autocomplete="off" data-lpignore="true" data-form-type="other" readonly 
                                   onfocus="this.removeAttribute('readonly');this.type='password'" 
                                   onblur="this.type='password'" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <div class="position-relative">
                            <input type="password" asp-for="ConfirmPassword" class="form-control" name="cpwd_@(DateTime.Now.Ticks)" autocomplete="off" data-lpignore="true" data-form-type="other" readonly 
                                   onfocus="this.removeAttribute('readonly');this.type='password'" 
                                   onblur="this.type='password'" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Users" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
