@model DoableFinal.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = $"Create {ViewBag.Role}";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Create Account</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-person-plus me-1"></i>
            New User Registration
        </div>
        <div class="card-body">
            <form asp-action="CreateUser" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Role" class="form-label">Role</label>
                    <select asp-for="Role" class="form-select">
                        <option value="">Select Role</option>
                        <option value="Admin">Admin</option>
                        <option value="Client">Client</option>
                        <option value="Employee">Employee</option>
                        <option value="Project Manager">Project Manager</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" autocomplete="off" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" autocomplete="off" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <div class="input-group">
            <input type="password" asp-for="Password" class="form-control" id="password" />
            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('password', this)">
                <i class="bi bi-eye"></i>
            </button>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="col-md-6 mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
        <div class="input-group">
            <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" />
            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmPassword', this)">
                <i class="bi bi-eye"></i>
            </button>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
</div>


                <!-- Employee and Project Manager Fields -->
                <div id="employeeFields" style="display: none;">
                    <h4 class="mt-4 mb-3">Additional Information</h4>
                    
                    <div class="mb-3">
                        <label asp-for="ResidentialAddress" class="form-label"></label>
                        <textarea asp-for="ResidentialAddress" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="ResidentialAddress" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MobileNumber" class="form-label"></label>
                            <input asp-for="MobileNumber" class="form-control" placeholder="09XXXXXXXXX" pattern="^09\d{9}$" maxlength="11" inputmode="numeric" required />
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Birthday" class="form-label"></label>
                            <input asp-for="Birthday" class="form-control" type="date" max="@DateTime.Today.AddYears(-18).ToString("yyyy-MM-dd")" required />
                            <span asp-validation-for="Birthday" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TinNumber" class="form-label"></label>
                            <input asp-for="TinNumber" class="form-control" placeholder="123-456-789 or 123-456-789-012" pattern="^\d{3}-?\d{3}-?\d{3}(-?\d{3})?$" maxlength="15" inputmode="numeric" required />
                            <span asp-validation-for="TinNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="PagIbigAccount" class="form-label"></label>
                            <input asp-for="PagIbigAccount" class="form-control" placeholder="12 digits e.g. 123456789012" pattern="^\d{12}$" maxlength="12" inputmode="numeric" required />
                            <span asp-validation-for="PagIbigAccount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Position" class="form-label"></label>
                        <input asp-for="Position" class="form-control" required />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input asp-for="EmailNotificationsEnabled" class="form-check-input" type="checkbox" id="EmailNotificationsEnabled">
                        <label class="form-check-label" for="EmailNotificationsEnabled">Email Notifications</label>
                    </div>
                </div>

                <!-- Client Fields -->
                <div id="clientFields" style="display: none;">
                    <h4 class="mt-4 mb-3">Company Information</h4>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CompanyName" class="form-label">Registered Company Name</label>
                            <input asp-for="CompanyName" class="form-control" required />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="CompanyType" class="form-label">Company Type</label>
                            <select asp-for="CompanyType" class="form-select" required>
                                <option value="">Select Type</option>
                                <option value="Sole Proprietorship">Sole Proprietorship</option>
                                <option value="Partnership">Partnership</option>
                                <option value="Corporation">Corporation</option>
                            </select>
                            <span asp-validation-for="CompanyType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CompanyAddress" class="form-label">Registered Company Address</label>
                        <textarea asp-for="CompanyAddress" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="CompanyAddress" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Designation" class="form-label">Designation</label>
                            <input asp-for="Designation" class="form-control" required />
                            <span asp-validation-for="Designation" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="MobileNumber" class="form-label">Mobile Number</label>
                            <input asp-for="MobileNumber" class="form-control" placeholder="09XXXXXXXXX" pattern="^09\d{9}$" maxlength="11" inputmode="numeric" required />
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TinNumber" class="form-label">TIN Number</label>
                        <input asp-for="TinNumber" class="form-control" placeholder="123-456-789 or 123-456-789-012" pattern="^\d{3}-?\d{3}-?\d{3}(-?\d{3})?$" maxlength="15" inputmode="numeric" required />
                        <span asp-validation-for="TinNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Users" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
                function toggleFields() {
                var role = $("#Role").val();
                // Show employee-like fields for Employee, Project Manager, and Admin
                if (role === "Employee" || role === "Project Manager" || role === "Admin") {
                    $("#employeeFields").slideDown();
                    $("#employeeFields input, #employeeFields textarea, #employeeFields select").prop('disabled', false);
                    $("#clientFields").slideUp();
                    $("#clientFields input, #clientFields textarea, #clientFields select").prop('disabled', true);
                } else if (role === "Client") {
                    $("#clientFields").slideDown();
                    $("#clientFields input, #clientFields textarea, #clientFields select").prop('disabled', false);
                    $("#employeeFields").slideUp();
                    $("#employeeFields input, #employeeFields textarea, #employeeFields select").prop('disabled', true);
                } else {
                    $("#employeeFields").slideUp();
                    $("#employeeFields input, #employeeFields textarea, #employeeFields select").prop('disabled', true);
                    $("#clientFields").slideUp();
                    $("#clientFields input, #clientFields textarea, #clientFields select").prop('disabled', true);
                }
            }

            $("#Role").change(toggleFields);
            toggleFields(); // Run on page load

            // Force role selection to trigger fields visibility
            var preselectedRole = '@ViewBag.Role';
            if (preselectedRole) {
                $("#Role").val(preselectedRole);
                toggleFields();
            }

            // Enable client-side validation
            $.validator.unobtrusive.parse(document);
        });
    </script>
    <script>
        $(function () {
            // helper functions
            function setInvalid($el, message) {
                $el.addClass('is-invalid');
                $el.siblings('span.text-danger').text(message);
            }
            function clearInvalid($el) {
                $el.removeClass('is-invalid');
                $el.siblings('span.text-danger').text('');
            }
            function isValidPhone(val) {
                return /^09\d{9}$/.test(val);
            }
            function isValidPagIbig(val) {
                return /^\d{12}$/.test(val);
            }
            function isValidTin(val) {
                var digits = val ? val.replace(/-/g, '') : '';
                return /^\d+$/.test(digits) && (digits.length === 9 || digits.length === 12);
            }

            // clear validation on input change for visible fields
            $(document).on('input change', '#employeeFields input, #clientFields input', function () {
                if (!$(this).is(':visible')) return;
                clearInvalid($(this));
            });

            $('form[asp-action="CreateUser"]').on('submit', function (e) {
                var isFormValid = true;

                // Age validation
                var bday = $('#Birthday').val();
                if (bday && $('#Birthday').is(':visible')) {
                    var birth = new Date(bday);
                    var today = new Date();
                    var age = today.getFullYear() - birth.getFullYear();
                    var m = today.getMonth() - birth.getMonth();
                    if (m < 0 || (m === 0 && today.getDate() < birth.getDate())) {
                        age--;
                    }
                    if (age < 18) {
                        isFormValid = false;
                        var msg = 'User must be at least 18 years old.';
                        $('#Birthday').siblings('span.text-danger').text(msg);
                        $('#Birthday').addClass('is-invalid');
                    }
                }

                // Validate visible fields
                $('#employeeFields input:visible, #employeeFields textarea:visible, #clientFields input:visible, #clientFields textarea:visible').each(function () {
                    var $this = $(this);
                    var name = $this.attr('name') || $this.attr('id');
                    var val = ($this.val() || '').trim();

                    // Check if field is required
                    if ($this.prop('required')) {
                        if (!val) {
                            isFormValid = false;
                            setInvalid($this, 'This field is required.');
                            return;
                        }
                    }

                    // Format validation (only if has value)
                    if (!val) {
                        clearInvalid($this);
                        return;
                    }

                    if (/MobileNumber/.test(name)) {
                        if (!isValidPhone(val)) {
                            isFormValid = false;
                            setInvalid($this, 'Invalid mobile number. Use 09XXXXXXXXX.');
                        } else {
                            clearInvalid($this);
                        }
                    }

                    if (/PagIbigAccount/.test(name)) {
                        if (!isValidPagIbig(val)) {
                            isFormValid = false;
                            setInvalid($this, 'Pag-IBIG account must be 12 digits.');
                        } else {
                            clearInvalid($this);
                        }
                    }

                    if (/TinNumber/.test(name)) {
                        if (!isValidTin(val)) {
                            isFormValid = false;
                            setInvalid($this, 'TIN must be 9 or 12 digits (dashes optional).');
                        } else {
                            clearInvalid($this);
                        }
                    }
                });

                if (!isFormValid) {
                    e.preventDefault();
                    return false;
                }
            });
        });

function togglePassword(inputId, btn) {
        const input = document.getElementById(inputId);
        const icon = btn.querySelector("i");

        if (input.type === "password") {
            input.type = "text";
            icon.classList.replace("bi-eye", "bi-eye-slash");
        } else {
            input.type = "password";
            icon.classList.replace("bi-eye-slash", "bi-eye");
        }
    }
    </script>
}
