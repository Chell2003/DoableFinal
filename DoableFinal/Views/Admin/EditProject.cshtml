@model DoableFinal.ViewModels.EditProjectViewModel

@{
    ViewData["Title"] = "Edit Project";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Project</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Projects">Projects</a></li>
        <li class="breadcrumb-item active">Edit Project</li>
    </ol>

    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-project-diagram me-1"></i>
                    Edit Project Details
                </div>
                <div class="card-body">
                    <form asp-action="EditProject" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" class="form-control" type="date" id="startDate" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                            <div id="startDateError" class="text-danger"></div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" class="form-control" type="date" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="Not Started">Not Started</option>
                                <option value="In Progress">In Progress</option>
                                <option value="On Hold">On Hold</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClientId" class="form-label"></label>
                            <input type="text" class="form-control" value="@Model.ClientName" readonly />
                            <input type="hidden" asp-for="ClientId" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProjectManagerId" class="form-label"></label>
                            <input type="text" class="form-control" value="@Model.ProjectManagerName" readonly />
                            <input type="hidden" asp-for="ProjectManagerId" />
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Projects" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Set min date to today for start date
            var today = new Date().toISOString().split('T')[0];
            $('#startDate').attr('min', today);

            // Validate start date on change
            $('#startDate').change(function() {
                var selectedDate = new Date($(this).val());
                var currentDate = new Date();
                
                // Reset the time part for accurate date comparison
                selectedDate.setHours(0, 0, 0, 0);
                currentDate.setHours(0, 0, 0, 0);

                if (selectedDate < currentDate) {
                    $('#startDateError').text('Start date cannot be in the past');
                    $(this).val(''); // Clear the invalid date
                } else {
                    $('#startDateError').text('');
                }
            });

            // Form submission validation
            $('form').submit(function(e) {
                var startDate = new Date($('#startDate').val());
                var currentDate = new Date();
                
                startDate.setHours(0, 0, 0, 0);
                currentDate.setHours(0, 0, 0, 0);

                if (startDate < currentDate) {
                    e.preventDefault();
                    $('#startDateError').text('Start date cannot be in the past');
                    return false;
                }
                return true;
            });
        });
    </script>
} 