@model IEnumerable<DoableFinal.Models.HomePageSection>
@{
    ViewData["Title"] = "Manage Contact Content";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Manage Contact Content</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-envelope me-1"></i>
            Edit Contact Sections
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    No sections found. Contact sections will be created when first accessed.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Display Name</th>
                                <th>Key</th>
                                <th>Last Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(s => s.SectionOrder))
                            {
                                <tr>
                                    <td>
                                        <strong>@item.DisplayName</strong>
                                    </td>
                                    <td>
                                        <code>@item.SectionKey</code>
                                    </td>
                                    <td>
                                        @if (item.UpdatedAt.HasValue)
                                        {
                                            <span class="badge bg-info">@item.UpdatedAt.Value.ToString("g")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="EditContactPageSection" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
