@model DoableFinal.Models.HomePageSection
@{
    ViewData["Title"] = $"Edit: {Model.DisplayName}";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Homepage Section</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-pencil me-1"></i>
            @Model.DisplayName
        </div>
        <div class="card-body">
            @if (TempData["ImagePath"] != null)
            {
                <div class="alert alert-success">Image saved: @TempData["ImagePath"]</div>
            }
            <form asp-action="EditHomePageSection" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Section</label>
                    <input type="text" class="form-control" value="@Model.DisplayName" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Key</label>
                    <code class="d-block bg-light p-2 rounded">@Model.SectionKey</code>
                </div>

                <div class="mb-3">
                    <label for="content" class="form-label">Content (HTML Allowed)</label>
                    <textarea class="form-control small-textarea" id="content" name="content" rows="3">@Model.Content</textarea>
                    <small class="form-text text-muted">You can use HTML tags like &lt;strong&gt;, &lt;em&gt;, &lt;a&gt;, etc.</small>
                </div>

                @if (!string.IsNullOrEmpty(Model.SectionKey) && Model.SectionKey.ToLower().Contains("image"))
                {
                    <div class="mb-3">
                        <label class="form-label">Current Image (if any)</label>
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="mb-2">
                                <img src="@Model.ImagePath" alt="section image" class="img-fluid" style="max-width:300px; height:auto;" />
                            </div>
                        }
                        <label class="form-label">Upload Image (optional)</label>
                        <input type="file" name="imageFile" class="form-control" />
                    </div>
                }

                <div class="mb-3">
                    <a href="javascript:history.back()" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="bi bi-eye me-1"></i>
            Preview
        </div>
        <div class="card-body">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>
