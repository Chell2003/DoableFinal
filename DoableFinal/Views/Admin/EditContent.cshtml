@model DoableFinal.ViewModels.ContentPageViewModel
@{
    ViewData["Title"] = "Edit Content";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit: @Model.DisplayName</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="ContentMS">Content Management</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="SaveContent" asp-controller="Admin" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="key" value="@Model.Key" />

                <div class="mb-3">
                    <label class="form-label">Title (HTML allowed)</label>
                    <textarea name="titleHtml" class="form-control" rows="3">@Model.TitleHtml</textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Body (HTML allowed)</label>
                    <textarea name="bodyHtml" class="form-control" rows="10">@Model.BodyHtml</textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Current Image</label>
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <div class="mb-2">
                            <img src="@Model.ImagePath" alt="image" style="max-width:300px; height:auto;" />
                        </div>
                    }
                    <label class="form-label">Replace Image (optional)</label>
                    <input type="file" name="imageFile" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="ContentMS" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
