@model IEnumerable<DoableFinal.Models.Project>

@{
    ViewData["Title"] = "Archived Projects";
    var dateFormat = "MMM dd, yyyy";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Archived Projects</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Projects">Projects</a></li>
        <li class="breadcrumb-item active">Archived Projects</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-archive me-1"></i>
            Archived Projects List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="projectsTable">
                    <thead>
                        <tr>
                            <th>Project Name</th>
                            <th>Client</th>
                            <th>Project Manager</th>
                            <th>Status</th>
                            <th>Archived At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model)
                        {
                            <tr>
                                <td>@project.Name</td>
                                <td>@($"{project.Client.FirstName} {project.Client.LastName}")</td>
                                <td>@($"{project.ProjectManager.FirstName} {project.ProjectManager.LastName}")</td>
                                <td>
                                    <span class="badge bg-@(project.Status switch {
                                        "Not Started" => "secondary",
                                        "In Progress" => "primary",
                                        "On Hold" => "warning",
                                        "Completed" => "success",
                                        _ => "secondary"
                                    })">@project.Status</span>
                                </td>
                                <td>@project.ArchivedAt?.ToString(dateFormat)</td>
                                <td>
                                    <a asp-action="ProjectDetails" asp-route-id="@project.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <form asp-action="UnarchiveProject" asp-route-id="@project.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary btn-sm" onclick="return confirm('Are you sure you want to unarchive this project?')">
                                            <i class="fas fa-box-open"></i> Unarchive
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#projectsTable').DataTable({
                order: [[4, 'desc']] // Sort by Archived At column by default
            });
        });
    </script>
}