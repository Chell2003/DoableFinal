@model DoableFinal.ViewModels.TicketStatusEditViewModel

@{
    ViewBag.Title = "Edit Ticket Status";
}

<h2>Edit Ticket Status</h2>

<div class="card">
    <div class="card-body">
        <h4>@Model.Title</h4>

        <form method="post" asp-action="EditTicket" asp-controller="Admin">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="CurrentStatus">Status</label>
                <select asp-for="CurrentStatus" class="form-control" asp-items="Model.AvailableStatuses"></select>
                <span asp-validation-for="CurrentStatus" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" href="@Url.Action("Tickets", "Admin")">Back</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
