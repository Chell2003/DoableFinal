@using Microsoft.EntityFrameworkCore
@inject DoableFinal.Data.ApplicationDbContext DbContext
@{
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var unreadCount = await DbContext.Notifications.CountAsync(n => n.UserId == userId && !n.IsRead);
    var userRole = User.IsInRole("Admin") ? "Admin" :
                  User.IsInRole("Project Manager") ? "Project Manager" :
                  User.IsInRole("Employee") ? "Employee" :
                  User.IsInRole("Client") ? "Client" : "";
    var controller = userRole.Replace(" ", "");
}

<li class="nav-item">
    <a asp-controller="@controller" asp-action="Notifications" class="nav-link position-relative">
        <i class="bi bi-bell fs-5"></i>
        @if (unreadCount > 0)
        {
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                @unreadCount
                <span class="visually-hidden">unread notifications</span>
            </span>
        }
    </a>
</li>